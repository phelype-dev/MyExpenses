{
  "openapi": "3.0.0",
  "info": {
    "title": "ApiMyExpenses",
    "description": "Hello, We at MyExpenses Team are happy to bring you our newest product. Our product is under development, soon there will be news",
    "version": "1.0.0",
    "contact": {
      "email": "phelypell1@hotmail.com"
    }
  },

  "paths": {

    "/registration": {
      "post": {
        "tags": ["Users Data"],
        "sumary": "Create users to login",
        "description": "Create users",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "exemple": {
                  "email": "email@email.com",
                  "passwords": "Abcd1234@"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },

    "/authentication": {
      "post": {
        "tags": ["Authentication"],
        "sumary": "Authentication user",
        "description": "Authentication",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "exemple": {
                  "email": "email@email.com",
                  "password": "ABC1234@"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Authorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },

    "/myuser/profile": {
      "post": {
        "tags": ["Users Data"],
        "sumary": "Criando complemento dos dados do usuário",
        "description": "Creating user data add-on",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": {
                    "type": "string"
                  },
                  "lastName": {
                    "type": "string"
                  },
                  "birthDate": {
                    "format": "Date"
                  },
                  "cellNumber": {
                    "type": "integer"
                  }
                },
                "exemple": {
                  "firstName": "José",
                  "lastName": "Alencar Ramos",
                  "birthDate": "1989/12/09",
                  "cellNumber": "62999993333"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Token is missing authorization header"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },

    "/add/fixed": {
      "post": {
        "tags": ["Fixed account registration"],
        "sumary": "Fixed account registration",
        "description": "Fixed account registration",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nameAccount": {
                    "type": "string"
                  },
                  "descriptionAcoount": {
                    "type": "string"
                  },
                  "accountValues": {
                    "type": "number"
                  },
                  "initialDate": {
                    "type": "Date"
                  },
                  "finalDate": {
                    "type": "Date"
                  },
                  "isActive": {
                    "type": "boolean"
                  }
                },
                "exemples": {
                  "nameAccount": "Conta de Água",
                  "descriptionAcoount": "Conta mensa de Água",
                  "accountValues": 49.9,
                  "initialDate": "2009/09/09",
                  "finalDate": "2022/09/09",
                  "isActive": true
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },

  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "apikey",
        "schema": "bearer",
        "bearerFormat": "JWT",
        "name": "Authorization",
        "in": "header Informar  'Bearer' antes do token"
      }
    }
  }
}
